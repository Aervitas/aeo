{
  "dependencies": {
    "create-react-app": "^5.0.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "npm install && npm-run-all -s install StartServer StartClient",
    "install": "npm-run-all -p installClient installServer",
    "installClient": "cd frontend && npm install",
    "installServer": "cd backend && npm install",
    "start-server": "cd backend && npm start",
    "start-client": "cd frontend && npm start"
  }
}
